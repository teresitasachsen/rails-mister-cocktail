<ul class="list-group">
<li class="list-group-item"><%= @cocktail.name %></li>
  <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item">Description: <%= dose.description %></li>
    <li class="list-group-item">Ingredient: <%= dose.ingredient.name %></li>
    <%= link_to "Delete #{dose.description}",
                dose_path(dose),
                method: :delete,
                data: { confirm: "Are you sure?" } %>
  <% end %>
</ul>

<%= link_to 'Back', cocktails_path %> |
<%= link_to 'Add dose', new_cocktail_dose_path(@cocktail) %>